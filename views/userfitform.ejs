<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>UserFit Table Form</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #333;
      color: #fff;
      padding: 20px;
    }

    header h1 {
      margin: 0;
    }

    nav ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    nav ul li {
      display: inline;
      margin-right: 10px;
    }

    nav ul li a {
      color: #fff;
      text-decoration: none;
    }

    .container {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-container {
      margin-bottom: 10px;
    }

    label {
      display: block;
      margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    .btn {
      padding: 8px 16px;
      background-color: #333;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .btn-dark {
      background-color: #333;
    }

    footer {
      background-color: #333;
      color: #fff;
      padding: 20px;
      text-align: center;
    }
  </style>
</head>
<body>
  <header>
    <h1>Fitness Tracker By the People</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <!-- Add more links for other tables as needed -->
      </ul>
    </nav>
  </header>
  
  <div class="container">
    <h2>UserFit Table Form</h2>
    <li><a href="http://localhost:3000/api/v1/fitness_tracker">View all fitness trackers</a></li>
      <div class="form-container">
      <form id="userfit-id-form">
        <label for="user_id"><li>Search By your User ID:</li></label>
        <input type="text" id="user_id" name="user_id">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
        <!--<button type="submit">Submit</button>-->
      </form>
  </div>

  <div class="form-container">
      <form id="userfit-username-form">
        <label for="userfit-username"><li>Search By your Username:</li></label>
        <input type="text" id="userfit-username" name="username">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
  </div>
  
  <div class="form-container">
      <form id="userfit-email-form">
        <label for="userfit-email"><li>Search By Email:</li></label>
        <input type="text" id="userfit-email" name="email">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>           
    </div>

    <div class="form-container">
      <form id="userfit-gender-form">
        <label for="userfit-gender"><li>Search By Gender:</li></label>
        <input type="text" id="userfit-gender" name="gender">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>           
    </div>

    <div class="form-container">
      <form id="userfit-height-form">
        <label for="height-search"><li>Search By Height:</li></label>
        <label for="minHeight"><li>Minimum Height:</li></label>
        <input type="number" id="minHeight" name="minHeight">
        <label for="maxHeight"><li>Maximum Height:</li></label>
        <input type="number" id="maxHeight" name="maxHeight">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>

    <div class="form-container">
      <form id="userfit-weight-form">
        <label for="Weight-search"><li>Search By Weight:</li></label>
        <label for="minWeight"><li>Minimum Weight:</li></label>
        <input type="number" id="minWeight" name="minHeight">
        <label for="maxWeight"><li>Maximum Weight:</li></label>
        <input type="number" id="maxWeight" name="maxWeight">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>
  </ul> 

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
      <script>
        $(document).ready(function() {
          $('#userfit-id-form').submit(function(event) {
            event.preventDefault();
            const user_id = $('#user_id').val();
            window.location.href = `/api/v1/fitness_tracker/userfit/id/${user_id}`;
          });
        });
      </script>

      <script>
        $(document).ready(function() {
          $('#userfit-username-form').submit(function(event) {
            event.preventDefault();
            const username = $('#userfit-username').val();
            window.location.href = `/api/v1/fitness_tracker/userfit/username/${username}`;
          });
        });
      </script>  

      <script>
        $(document).ready(function() {
          $('#userfit-email-form').submit(function(event) {
            event.preventDefault();
            const email = $('#userfit-email').val();
            window.location.href = `/api/v1/fitness_tracker/userfit/emails/${email}`;
          });
        });
      </script>   

      <script>
        $(document).ready(function() {
          $('#userfit-gender-form').submit(function(event) {
            event.preventDefault();
            const gender = $('#userfit-gender').val();
            window.location.href = `/api/v1/fitness_tracker/userfit/genders/${gender}`;
          });
        });
      </script> 

      <script>
        $(document).ready(function() {
          $('#userfit-height-form').submit(function(event) {
            event.preventDefault();
            const minHeight = $('#minHeight').val();
            const maxHeight = $('#maxHeight').val();
            window.location.href = `/api/v1/fitness_tracker/userfit/heights/${minHeight}/${maxHeight}`;
          });
        });
      </script>

      <script>
        $(document).ready(function() {
          $('#userfit-weight-form').submit(function(event) {
            event.preventDefault();
            const minWeight = $('#minWeight').val();
            const maxWeight = $('#maxWeight').val();
            window.location.href = `/api/v1/fitness_tracker/userfit/weights/${minWeight}/${maxWeight}`;
          });
        });
      </script>
  </div>
  
  <footer>
    <p>&copy; 2023 Fitness Tracker. All rights reserved.</p>
  </footer>
</body>
</html>