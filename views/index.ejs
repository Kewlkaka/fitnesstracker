            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </li>
      </div>

      <div class="form-container">
        <li>
          <form id="workout-exerciseid-form">
            <label for="exercise_id">Search Exercise By ID:</label>
            <input type="text" id="workout_exercise_id" name="workout_exercise_id">
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </li>
      </div>
    </ul>

    <script>
      $(document).ready(function () {
        $('#workout-userid-form').submit(function (event) {
          event.preventDefault();
          const workout_userid = $('#workout_user_id').val();
          window.location.href = `/api/v1/fitness_tracker/workout/wid/${workout_userid}`;
        });
      });
    </script>

    <script>
      $(document).ready(function () {
        $('#workouts-date-form').submit(function (event) {
          event.preventDefault();
          const workout_date = $('#workout_date').val();
          window.location.href = `/api/v1/fitness_tracker/workout/date/${workout_date}`;
        });
      });
    </script>

    <script>
      $(document).ready(function () {
        $('#workout-exerciseid-form').submit(function (event) {
          event.preventDefault();
          const workout_exerciseid = $('#workout_exercise_id').val();
          window.location.href = `/api/v1/fitness_tracker/workout/w_eid/${workout_exerciseid}`;
        });
      });
    </script>



    <h4 text-align="left">Read Queries For Workout and Exercise Table</h4>
    <ul>
      <li><a href="http://localhost:3000/api/v1/fitness_tracker/workoutexercise">View all Workouts</a></li>

      <div class="form-container">
        <li>
          <form id="workoutexercise-sets-form">
            <label for="sets">Search via Number of Sets:</label>
            <input type="text" id="workoutexercise_sets" name="workoutexercise_sets">
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </li>
      </div>

      <div class="form-container">
        <li>
          <form id="workoutexercise-reps-form">
            <label for="reps">Search via Number of Reps:</label>
            <input type="text" id="workoutexercise_reps" name="workoutexercise_reps">
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </li>
      </div>

      <div class="form-container">
        <li>
          <form id="workout-wid_eid-form">
            <label for="the_form">Search via Workout ID and Exercise ID:</label>
            <label for="w_id">Workout ID:</label>
            <input type="text" id="w_id" name="w_id">
            <label for="e_id">Exercise ID:</label>
            <input type="text" id="e_id" name="e_id">
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </li>
      </div>

      <script>
        $(document).ready(function () {
          $('#workoutexercise-sets-form').submit(function (event) {
            event.preventDefault();
            const workout_sets = $('#workoutexercise_sets').val();
            window.location.href = `/api/v1/fitness_tracker/workoutexercise/sets/${workout_sets}`;
          });
        });
      </script>
      <script>
        $(document).ready(function () {
          $('#workoutexercise-reps-form').submit(function (event) {
            event.preventDefault();
            const workout_reps = $('#workoutexercise_reps').val();
            window.location.href = `/api/v1/fitness_tracker/workoutexercise/reps/${workout_reps}`;
          });
        });
      </script>

      <script>
        $(document).ready(function () {
          $('#workout-wid_eid-form').submit(function (event) {
            event.preventDefault();
            const workout_id = $('#w_id').val();
            const exercise_id = $('#e_id').val();
            window.location.href = `/api/v1/fitness_tracker/workoutexercise/wid_eid/${workout_id}/${exercise_id}`;
          });
        });
      </script>
    </ul>
</body>

</html>


