          const maxWeight = $('#maxWeight').val();
          window.location.href = `/api/v1/fitness_tracker/userfit/weights/${minWeight}/${maxWeight}`;
        });
      });
    </script>

    <h4 text-align="left">Read Queries For Exercise Table</h4>
    <ul>
      <li><a href="http://localhost:3000/api/v1/fitness_tracker/exercises">View all Exercises</a></li>

      <div class="form-container">
        <li>
          <form id="exercises-id-form">
            <label for="exercise_id">Search Exercise By ID:</label>
            <input type="text" id="exercise_id" name="exercise_id">
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </li>
      </div>

      <div class="form-container">
        <li>
          <form id="exercises-category-form">
            <label for="exercises-category">Search By Exercise Category:</label>
            <input type="text" id="exercises-category" name="exercise_category">
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </li>
      </div>

      <div class="form-container">
        <li>
          <form id="exercises-calories-form">
            <label for="calories-search">Search Exercises By Calories:</label>
            <label for="minCalories">Minimum Calories:</label>
            <input type="number" id="minCalories" name="minCalories">
            <label for="maxCalories">Maximum Calories:</label>
            <input type="number" id="maxCalories" name="maxCalories">
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
        </li>
      </div>

      <script>
        $(document).ready(function () {
          $('#exercises-id-form').submit(function (event) {
            event.preventDefault();
            const exercise_ids = $('#exercise_id').val();
            window.location.href = `/api/v1/fitness_tracker/exercises/eid/${exercise_ids}`;
          });
        });
      </script>

      <script>
        $(document).ready(function () {
          $('#exercises-category-form').submit(function (event) {
            event.preventDefault();
            const exercise_category = $('#exercises-category').val();
            window.location.href = `/api/v1/fitness_tracker/exercises/ecategory/${exercise_category}`;
          });
        });
      </script>

      <script>
        $(document).ready(function () {
          $('#exercises-calories-form').submit(function (event) {
