          window.location.href = `/api/v1/fitness_tracker/userfit/genders/${gender}`;
        });
      });
    </script>

    <script>
      $(document).ready(function () {
        $('#userfit-height-form').submit(function (event) {
          event.preventDefault();
          const minHeight = $('#minHeight').val();
