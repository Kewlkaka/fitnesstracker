<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>UserFit Table Form</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #333;
      color: #fff;
      padding: 20px;
    }

    header h1 {
      margin: 0;
    }

    nav ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    nav ul li {
      display: inline;
      margin-right: 10px;
    }

    nav ul li a {
      color: #fff;
      text-decoration: none;
    }

    .container {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-container {
      margin-bottom: 10px;
    }

    label {
      display: block;
      margin-bottom: 5px;
    }

    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    .btn {
      padding: 8px 16px;
      background-color: #333;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .btn-dark {
      background-color: #333;
    }

    footer {
      background-color: #333;
      color: #fff;
      padding: 20px;
      text-align: center;
    }
  </style>
</head>
<body>
  <header>
    <h1>Fitness Tracker By the People</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
      </ul>
    </nav>
  </header>
  
  <div class="container">
    <h2>Exercise Table Form</h2>
    <li><a href="http://localhost:3000/api/v1/fitness_tracker/exercises">View all Exercises</a></li>
    
    <div class="form-container">
      <form id="exercises-id-form">
        <label for="exercise_id"><li>Search Exercise By ID:</li></label>
        <input type="text" id="exercise_id" name="exercise_id">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>
    
    <div class="form-container">
      <form id="exercises-category-form">
        <label for="exercises-category"><li>Search By Exercise Category:</li></label>
        <input type="text" id="exercises-category" name="exercise_category">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>

    <div class="form-container">
      <form id="exercises-calories-form">
        <label for="calories-search"><li>Search Exercises By Calories:</li></label>
        <label for="minCalories">Minimum Calories:</label>
        <input type="number" id="minCalories" name="minCalories">
        <label for="maxCalories">Maximum Calories:</label>
        <input type="number" id="maxCalories" name="maxCalories">
        <p> </p>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      $(document).ready(function() {
        $('#exercises-id-form').submit(function(event) {
          event.preventDefault();
          const exercise_ids = $('#exercise_id').val();
          window.location.href = `/api/v1/fitness_tracker/exercises/eid/${exercise_ids}`;
        });
      });
    </script>
    
    <script>
      $(document).ready(function() {
        $('#exercises-category-form').submit(function(event) {
          event.preventDefault();
          const exercise_category = $('#exercises-category').val();
          window.location.href = `/api/v1/fitness_tracker/exercises/ecategory/${exercise_category}`;
        });
      });
    </script> 
    
    <script>
      $(document).ready(function() {
        $('#exercises-calories-form').submit(function(event) {
          event.preventDefault();
          const minCalories = $('#minCalories').val();
          const maxCalories = $('#maxCalories').val();
          window.location.href = `/api/v1/fitness_tracker/exercises/ecalories/${minCalories}/${maxCalories}`;
        });
      });
    </script>
  </div>
  
  <footer>
    <p>&copy; 2023 Fitness Tracker. All rights reserved.</p>
  </footer>
</body>
</html>